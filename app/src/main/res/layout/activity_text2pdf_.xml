<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshay.pdfvoicereader.Text2pdf_Activity">

    <Button
        android:id="@+id/browse_p2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editText"
        android:layout_marginStart="31dp"
        android:layout_marginTop="78dp"
        android:onClick="getfile"/>

    <Button
        android:id="@+id/conv_p2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/browse_p2t"
        android:layout_marginTop="84dp"
        android:onClick="onClickConvert"
        android:text="Convert" />

    <Button
        android:id="@+id/backt2p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/browse_p2t"
        android:layout_alignTop="@+id/conv_p2t"
        android:text="@android:string/cancel" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/conv_p2t"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="select file" />
</RelativeLayout>
